<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/sub_color"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"
            android:textColor="@color/main_color"
            android:textSize="20dp"
            android:fontFamily="@font/moya"
            android:text="나만의 미술관"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_ndraw"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:textColor="@color/text_color"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:drawableTop="@drawable/drawing"
        android:text="새로운 그림 그리기"
        android:gravity="right|center_vertical"
        android:layout_margin="15dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btn_mygal"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:textColor="@color/text_color"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:drawableTop="@drawable/mygallery"
        android:text="나의 갤러리"
        android:gravity="right|center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"/>
</LinearLayout>